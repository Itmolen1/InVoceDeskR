        var rowCount6 = 0;
        var rowCount21 = 0;
        var rowCount0 = 0;

        $('#QutationServiceDetail tbody tr td').each(function () {

            var EquationResult = $(this).find('.VATp').val();
            if (EquationResult == 6) {
                rowCount6++;
            }
            else if (EquationResult == 21) {
                rowCount21++;
            }
            else if (EquationResult == 0) {
                rowCount0++
            }
        })

        if (rowCount0 == 0) {
            $("#btwop").text('0.00');
        }
        if (rowCount6 == 0) {
            $("#BTW6p").text('0.00');
        }
        if (rowCount21 == 0) {
            $("#BTW21p").text('0.00');
