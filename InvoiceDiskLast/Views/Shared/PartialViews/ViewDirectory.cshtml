
@{
    ViewBag.Title = "ViewDirectory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/DirectoryCSS.css" rel="stylesheet" />

<div class="tree">
    <ul>
        <li>
            <span><i class="icon-folder"></i> @ViewBag.Name</span>
            <ul>
                @if (ViewBag.TreeView != null)
                {
                    foreach (var item in ViewBag.TreeView)
                    {
                        <li>
                            <a href="@item.FileFolderPathe/@item.DirectoryPath" target="_blank"><span class="badge badge-success"><i class="icon-minus-sign"></i> @item.DirectoryPath</span></a>
                            <ul>
                                @*<li>
                                        <a href=""><span><i class="icon-time"></i> 8.00</span> &ndash; Changed CSS to accomodate...</a>
                                    </li>*@
                            </ul>
                        </li>
                    }
                }
            </ul>
        </li>
    </ul>
</div>

<script type="text/javascript">

    $(function () {
        $('.tree li:has(ul)').addClass('parent_li').find(' > span').attr('title', 'Collapse this branch');
        $('.tree li.parent_li > span').on('click', function (e) {
            var children = $(this).parent('li.parent_li').find(' > ul > li');
            if (children.is(":visible")) {
                children.hide('fast');
                $(this).attr('title', 'Expand this branch').find(' > i').addClass('icon-plus-sign').removeClass('icon-minus-sign');
            } else {
                children.show('fast');
                $(this).attr('title', 'Collapse this branch').find(' > i').addClass('icon-minus-sign').removeClass('icon-plus-sign');
            }
            e.stopPropagation();
        });
    });
</script>

