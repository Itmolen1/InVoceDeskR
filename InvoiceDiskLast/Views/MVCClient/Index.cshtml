                        <form method="post" enctype="multipart/form-data">
                            <div class="col-md-6">
                                <input type="file" id="fileInput" multiple class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" id="btnUpload" value="Upload" />

                            </div>
