                <div class="row" style="margin-right: 66px;margin-left: 50px; margin-top: 50px; margin-bottom:50px;">
                    ontvangt de offerte van ons voor de onderstaande services.

                    <table id="mytable" class="table table-bordred table-striped table-responsive">
                        <thead>
                            <tr>
                                <th class="col-sm-4">
                                    Service
                                </th>
                                <th class="col-sm-2">
                                    Quantity
                                </th>
                                <th class="col-sm-2">
                                    Price
                                </th>
                                <th class="col-sm-2">
                                    Total
                                </th>
                                <th class="col-sm-1">
                                    Vat
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (ViewBag.QutationDatailsList1 != null)
                            {
                                foreach (var item in ViewBag.QutationDatailsList1)
                                {
