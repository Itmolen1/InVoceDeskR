    $('#tblexpense').on('click', '.remove', function () {

        var CurrentRow = $(this).closest("tr");
        $(this).parents('tr').remove();

        var currentRow = $(this).closest("tr");
        var VAT = currentRow.find('.VATG').val();
        RowSubTalSubtotal(VAT, currentRow);
        CalculateVateTotal();
        GrandTotal();
        TotalExcudeBtw();
        CalculateTaxAmount(VAT, currentRow);
