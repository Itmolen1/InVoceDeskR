<div id="Pending" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Pending perchase</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="form-group ">
                            <input class="form-control hidden" type="text" required id="txtpurchaseId" />
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group ">
                            @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control", id = "txtfromdate" } })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group ">
                            @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control", id = "txttodate" } })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group ">
