                                  break


                              case "accepted":
                                  return '<button  class="btn btn-info btn-sm" data-id="Id" onclick="ViewInvoice(' + row.PurchaseOrderID + ', \'' + row.Type + '\')"><i class="fa fa-eye"> View Invoice</i></button>'
                                  break
                          }

