@model InvoiceDiskLast.Models.EmailModel

@{
    ViewBag.Title = "InvoicebyEmail";
}

<h2>InvoicebyEmail</h2>


<div class="container">


    @if (TempData["Error"] != null)
    {
        <div>
            <p>@TempData["Error"]</p>
        </div>
    }


    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            @using (Html.BeginForm("InvoiceByEmail", "purchase", FormMethod.Post, new { id = "frmSendEmail" }))
            {
                <div class="panel panel-default">
                    <div class="panel-heading"><p><b>Send Invoice by email</b></p> </div>
                    <div class="panel-body">
                        <div class="row text-center">
                            <div class="col-md-6 col-lg-offset-3">
                                <h2 id="">Invoice-@Model.invoiceId</h2>
                                @Html.HiddenFor(Model => Model.invoiceId)
                            </div>
                        </div>

                        <div class="col-md-8 col-lg-offset-2" style="margin-top:5px">
                            <div class="col-md-2 pull-left">From:</div>

                            <div class="col-md-10">
                                @Html.TextBoxFor(Model => Model.From, new { @class = "form-control", value = "samarbudhni@gmail.com", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="col-md-8 col-lg-offset-2" style="margin-top:5px">
                            <div class="col-md-2 pull-left">To:</div>

                            <div class="col-md-10">
                                @Html.TextBoxFor(Model => Model.ToEmail, new { @class = "form-control", @required = "required" })

                            </div>
                        </div>

                        <div class="col-md-8 col-lg-offset-2" style="margin-top:5px">
                            <div class="col-md-2 pull-left">AttachFiles:</div>
                            <div class="col-md-10">
                                <label>@Model.Attachment</label>
                                @Html.HiddenFor(Model => Model.Attachment);
                            </div>
                        </div>

                        <div class="col-md-8 col-lg-offset-2" style="margin-top:5px">
                            <div class="col-md-2 pull-left">Topic:</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(Model => Model.Topic, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-8 col-lg-offset-2" style="margin-top:5px">
                            <div class="col-md-2 pull-left">Text e-Email:</div>

                            <div class="col-md-10">
                                @Html.TextAreaFor(Model => Model.EmailText, new { @class = "form-control", @rows = "10", @cols = "50" })
                            </div>
                        </div>

                    </div>
                    <div class="panel-footer">

                        <button type="submit" class="btn btn-primary">Send by e-mail</button>

                        <a href="/Purchase/AddOrEdit/@Model.invoiceId" class="btn btn-primary">Cancel</a>


                    </div>
                </div>
            }
        </div>
        <div class="col-sm-1"></div>
    </div>

</div>