        var start = fromdate;
        var end = todate;

        var diff = new Date(end - start);

    }

    function EditPurchase(PurchaseId) {
        $.ajax({
            url: '/Purchase/AddOrEditPurchase',
            type: 'GET',
            data: {
                purchaseId: PurchaseId
            },
            success: function (data) {

                window.location.href = "/Purchase/AddOrEdit/" + PurchaseId;
            }
        });

    }

    function ViewServiceDetail(PurchaseId) {
        $.ajax({
            url: '/Purchase/AddOrEditPurchase',
            type: 'GET',
            data: {
                purchaseId: PurchaseId
            },
            success: function (data) {

                window.location.href = "/MvcInvoiceServices/Viewinvoice?purchaseOrderId=" + PurchaseId;
            }
        });
    }


    function ViewInvoiceDetail(PurchaseId) {

        $.ajax({
            url: '/Purchase/AddOrEditPurchase',
            type: 'GET',
            data: {
                purchaseId: PurchaseId
            },
            success: function (data) {

                window.location.href = "/Purchase/Viewinvoice?purchaseOrderId=" + PurchaseId;
            }
        });

    }




    function EditService(PurchaseId) {
        $.ajax({
            url: '/Purchase/AddOrEditPurchase',
            type: 'GET',
            data: {
                purchaseId: PurchaseId
            },
            success: function (data) {

                window.location.href = "/MvcInvoiceServices/AddOrEdit/" + PurchaseId;
            }
        });


    }

</script>
