                                    <option>0</option>
                                    <option>6</option>
                                    <option>21</option>
                                </select>
                            </td>
                            <td>
                                <input type="text" readonly id="RowTotalG" class="RowTotalG  form-control Input-height" style="width:80px" />
                            </td>
                            <td>

                                <input type="button" id="btnaddGoods" value="+" class="btn-height" style="width:50px" />
                            </td>



                        </tr>
                    </table>
